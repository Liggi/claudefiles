{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "900000",
    "BASH_MAX_TIMEOUT_MS": "900000"
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/jason/.claude/hooks/session-state-hook.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/jason/claudia/scripts/read-shared-state.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/jason/.claude/hooks/file-tools-hook.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/home/jason/.claude/hooks/comment_analyzer.py"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/home/jason/.claude/hooks/comment_analyzer.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/jason/.claude/hooks/comment_analyzer.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /home/jason/.claude/hooks/statusline-command.sh"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754038067914
  },
  "toolPermissions": {
    "allow": [
      "Bash(echo * > ~/.claude/note)",
      "Bash(rm ~/.claude/note)",
      "Bash(tmux *)"
    ],
    "deny": []
  },
  "gitAttribution": false
}
